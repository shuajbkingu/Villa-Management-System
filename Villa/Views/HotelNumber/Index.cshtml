@model IEnumerable<Villa.Domain.Entities.HotelNumber>
<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Hotel Number List</h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <div class="row pb-3">
            <div class="col-6 offset-6 text-end">
                <a asp-controller="HotelNumber" asp-action="Create" class="btn btn-secondary">
                    <i class="bi bi-patch-plus"></i>   Add new Hotel Number
                </a>
            </div>
        </div>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Hotel Name</th>
                    <th>Hotel Number</th>
                    <th>Special Details</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@obj.Hotel.Name</td>
                        <td>@obj.Hotel_Nr</td>
                        <td>@obj.SpecialDetails</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-action="Update" asp-controller="HotelNumber" asp-route-hotelNumberId="@obj.Hotel_Nr"
                                   class="btn btn-success mx-2">
                                    <i class="bi bi-pencil-square"></i> Update
                                </a>
                                <a asp-action="Delete" asp-controller="HotelNumber" asp-route-hotelNumberId="@obj.Hotel_Nr"
                                   class="btn btn-danger mx-2">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
